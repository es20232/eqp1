datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int           @id @default(autoincrement())
  full_name       String        @db.VarChar(64)
  username        String        @unique @db.VarChar(50)
  email           String        @unique @db.VarChar(50)
  password        String
  profile_picture Bytes?        @default("") @db.LongBlob //definir imagem padrao
  ResetCode       ResetCode[]
  Post            Post[]
  interaction     Interaction[]
}

model ResetCode {
  id         Int      @id @default(autoincrement())
  code       String   @unique @db.VarChar(6)
  expiration DateTime
  userEmail  String   @unique @db.VarChar(50)
  user       User     @relation(fields: [userEmail], references: [email])
}

model Post {
  id               Int           @id @default(autoincrement())
  publication_date DateTime      @default(now())
  userId           Int
  user             User          @relation(fields: [userId], references: [id])
  post_image       Bytes         @db.LongBlob
  interaction      Interaction[]

  @@index([userId])
}

model Interaction {
  Post        Post      @relation(fields: [postId], references: [id])
  postId      Int
  User        User      @relation(fields: [userId], references: [id])
  userId      Int
  like        Boolean   @default(false)
  deslike     Boolean   @default(false)
  comment     String?   @db.VarChar(250)
  commentDate DateTime?

  @@id([userId, postId])
  @@index([postId])
  @@index([userId])
}
